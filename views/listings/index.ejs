<% layout("layouts/boilerplates") %>

<div class="container mt-4">
  <h2 class="text-center mb-4">All Listings</h2>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
    <% listings.forEach(listing => { %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= listing.image?.url || '/images/default.jpg' %>" class="card-img-top" alt="listing">
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text text-truncate"><%= listing.description %></p>
            <p><strong>â‚¹<%= listing.price %></strong></p>
            <a href="/listings/<%= listing._id %>" class="btn btn-dark btn-sm">View</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
