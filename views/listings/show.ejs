<% layout("layouts/boilerplates") %>

<div class="container mt-3 text-center">
  <h3 class="details"><%= listing.title %></h3>

  <!-- Image with modal -->
  <img src="<%= listing.image?.url || '/images/default.jpg' %>"
       class="show-img"
       alt="listing_image"
       data-bs-toggle="modal"
       data-bs-target="#imageModal" />

  <div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-fullscreen">
      <div class="modal-content bg-dark">
        <div class="modal-header border-0">
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body d-flex justify-content-center align-items-center">
          <img src="<%= listing.image?.url || '/images/default.jpg' %>"
               style="width:100%; height:100vh; object-fit:contain;" />
        </div>
      </div>
    </div>
  </div>

  <!-- Details -->
  <div class="details-card">
    <p><i>@<%= listing.owner.username %></i></p>
    <p><%= listing.description %></p>
    <p>â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
    <p><%= listing.location %>, <%= listing.country %></p>
  </div>

  <!-- Edit/Delete -->
  <% if(currUser && String(listing.owner._id) === String(currUser._id)) { %>
    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  <% } %>

  <!-- Reviews -->
  <div class="text-center mb-3">
    <a class="btn btn-sm btn-outline-dark" data-bs-toggle="collapse" href="#reviewsSection">
      ðŸ’¬ Comments (<%= listing.reviews.length %>)
    </a>
  </div>

  <div class="collapse" id="reviewsSection">
    <div class="card mx-auto mb-4" style="max-width:600px;">
      <div class="card-body">
        <% if(currUser) { %>
          <form action="/listings/<%= listing._id %>/reviews" method="POST" class="mb-3">
            <textarea name="review[comment]" rows="2" class="form-control mb-2" placeholder="Add a comment..." required></textarea>
            <button class="btn btn-sm btn-dark">Post</button>
          </form>
          <hr>
        <% } %>

        <% if(listing.reviews.length > 0) { %>
          <% listing.reviews.forEach(review => { %>
            <div class="mb-3 border-bottom pb-2">
              <strong>@<%= review.author.username %></strong>
              <p><%= review.comment %></p>
              <% if(currUser && String(review.author._id) === String(currUser._id)) { %>
                <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-sm btn-outline-dark">Delete</button>
                </form>
              <% } %>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-muted">No comments yet.</p>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Map -->
  <div class="mx-auto" style="max-width:600px;">
    <h3>Listing Location</h3>
    <div id="map"></div>
  </div>
</div>

<script>
  const coords = <%- JSON.stringify((listing.geometry && listing.geometry.coordinates) || [77.2090, 28.6139]) %>;
  const listingCoords = [coords[1], coords[0]];
  document.addEventListener("DOMContentLoaded", () => {
    displayListingMap("map", listingCoords, "<%= listing.title %>");
  });
</script>
<script src="/js/map.js"></script>
